.Sidebar
  .User-name
    .Top-items
      .Top-items__name
        = current_user.name
      .Top-items__icons
        = link_to new_group_path do
          = icon('far', 'edit',class: "Top-items__icons--box")
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog',class: "Top-items__icons--box")
  .Group-list
    - current_user.groups.each do |group|
      .Group
        = link_to group_messages_path(group) do
          .Group__name
            = group.name
          .Group__message
            = group.show_last_message